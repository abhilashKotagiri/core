package core;

/**
 *
 * @author abhilash
 */
public class Arrays {
    
    public static void main(String[] args) {
        String[] cities = {"hyderabad", "bangalore", "delhi", "mumbai"};
        System.out.println("first city" + cities[0]);
        System.out.println("second city" + cities[1]);
        System.out.println("third city" + cities[2]);
        System.out.println("fourth city" + cities[3]);
 
        System.out.println("with the for loop");
        for (int i=0; i<=3;i++){
            System.out.println("the"  + "city is " + cities[i]);            
        }
        
        String[] states = new String[4];
        
        states[0] = "Telangana";
        states[1] = "Andhra";
        states[2] = "karnataka";
        states[3] = "Tamil Nadu";
         for (int i=0; i<=3;i++){
            
            System.out.println("the" +  "state is " + states[i]);
            
            }
        }
     
    }
    

